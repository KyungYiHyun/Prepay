<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MyPage.MyPageFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/sunpick_prepay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/samsung_font_2"
        android:text="조성윤 님"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="오늘도 새롭게 시작해봐요 :)"
        android:fontFamily="@font/samsung_font_2"
        android:textFontWeight="600"
        android:textSize="15sp"
        android:letterSpacing="-0.05"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/user_name"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="0dp"
        android:background="@null"
        android:drawableLeft="@drawable/group_add"
        android:drawablePadding="2dp"
        android:fontFamily="@font/samsung_font_2"
        android:scaleX="0.9"
        android:text="그룹 생성"
        android:textColor="#9CA4AB"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/enter_group_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enter_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:drawableLeft="@drawable/group_join"
        android:drawablePadding="1dp"
        android:fontFamily="@font/samsung_font_2"
        android:scaleX="0.9"
        android:text="코드 입력"
        android:textColor="#9CA4AB"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_marginTop="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingTop="12dp"
        android:paddingEnd="32dp"
        android:paddingBottom="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_btn" />

    <ImageButton
        android:id="@+id/group_detail_btn"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="100dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/group_detail_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/pay_btn"
        android:layout_width="150dp"
        android:layout_height="145dp"
        android:layout_marginEnd="36dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/pay_btn"
        app:layout_constraintBottom_toBottomOf="@+id/group_detail_btn"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
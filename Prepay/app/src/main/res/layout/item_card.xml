<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="20dp"
    android:elevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/samsung_font_2"
            android:text="SSAFY"
            android:textColor="#F2ffffff"
            android:textSize="15sp"
            android:letterSpacing="-0.05"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_dummy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/samsung_font_1"
            android:text="원"
            android:textColor="#F2ffffff"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvBalance"
            app:layout_constraintStart_toEndOf="@+id/tvBalance" />

        <TextView
            android:id="@+id/card_dummy3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/samsung_font_1"
            android:text="사용 가능 금액"
            android:textColor="#BFFFFFFF"
            android:textSize="12sp"
            android:textFontWeight="600"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <TextView
            android:id="@+id/card_dummy4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:text="* * * *  * * * *"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/samsung_font_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBalance" />

        <ImageView
            android:id="@+id/card_dummy"
            android:layout_width="68dp"
            android:layout_height="23dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:src="@drawable/card_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="176dp"
            android:fontFamily="@font/samsung_font_1"
            android:text="Private"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="88dp"
            android:fontFamily="@font/samsung_font_2"
            android:text="8,000,000"
            android:textColor="#F2ffffff"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/card_dummy3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>